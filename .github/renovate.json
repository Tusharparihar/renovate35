{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases"
  ],
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Group ALL non-major Terraform updates together",
      "matchManagers": ["terraform"],
      "matchPackagePatterns": ["hashicorp/*"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"], 
      "groupName": "All Terraform Patch and Minor Updates",
      "automerge": false 
    {
      "description": "Ensure Major updates are opened individually for sequential upgrades",
      "matchManagers": ["terraform"],
      "matchPackagePatterns": ["hashicorp/*"],
      "matchUpdateTypes": ["major"],
      "groupName": null, 
      "automerge": false
    }
  ]
}
